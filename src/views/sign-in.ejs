<%- include("template/header", {title,css,token,main}) %>

<main>
  <article>
    <h1>Vajuli</h1>
    <form>
      <section>
        <input
          class="special-input"
          name="name"
          id="name"
          type="text"
          required
          autofocus
        />
        <label for="name">Nombre</label>
      </section>
      <section>
        <input
          class="special-input"
          name="surname"
          id="surname"
          type="text"
          required
        />
        <label for="surname">Apellido</label>
      </section>
      <section>
        <input
          class="special-input"
          name="email"
          id="email"
          type="email"
          required
        />
        <label for="email">Email</label>
      </section>
      <section>
        <input
          class="special-input"
          name="username"
          id="username"
          type="text"
          autocomplete="off"
          required
        />
        <label for="username">Usuario</label>
      </section>
      <section>
        <input name="password" id="password" type="password" required />
        <label for="password">Contraseña</label>
        <img src="/icons/show.png" alt="show" id="show-password" class="password-vision" />
        <img
          src="/icons/hide.png"
          alt="hide"
          id="hide-password"
          class="password-vision hide-image"
        />
      </section>
      <section>
        <input name="rpassword" id="rpassword" type="password" required />
        <label for="rpassword" style="width: 120px">Repetir contraseña</label>
      </section>
      <section>
        <select name="membership" id="membership">
          <option value="0">Escoje una opción</option>
          <option value="1">Mensualidad</option>
          <option value="2">Semestral</option>
          <option value="3">Anual</option>
        </select>
      </section>
      <input type="submit" value="Ingresar" />
      <input type="button" value="Volver" onclick="location.href = '/'" />
    </form>
  </article>
</main>
<script defer src="/js/sign-in.js"></script>

<%- include("template/footer") %>
